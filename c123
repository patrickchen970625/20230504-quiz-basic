#include <iostream>
#include <stack>

using namespace std;

void test(int len) {
    while (true) {
        stack<int> st; 
        int k;
        int point = 1;
        int top = 0;

        
        for (int i = 0; i < len; i++) {
            cin >> k;
            if (k == 0) {
                return;
            } else {
                
                for (int i = point; i <= k; i++) {
                    st.push(i);
                    point++;
                    top++;
                }
                if (st.top() == k) {
                    st.pop();
                    top--;
                }
            }
        }

        
        if (st.empty()) {
            cout << "Yes\n";
        } else {
            cout << "No\n";
        }
    }
}

int main() {
    int len;
    while (true) {
        cin >> len;
        if (len == 0) {
            break;
        } else {
            test(len);
        }
    }
}
